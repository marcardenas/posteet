http {
    server {
        listen       80;
        server_name  posteet.com;
        server_name  localhost;

        location ^~ / {
            proxy_pass          http://${WEBAPP_HOST}:${WEBAPP_PORT};
            proxy_http_version  1.1;
        }

        location ^~ /auth/ {
            proxy_pass          http://${API_HOST}:${API_PORT}/;
            proxy_http_version  1.1;
        }
    }
}

events {
    worker_connections  1024;
}